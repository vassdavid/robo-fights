{% extends 'base.html.twig' %}

{% block title %}Robot{% endblock %}

{% block body %}
    <h1>Robot</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ robot.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ robot.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ robot.type.value }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ robot.power }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ robot.imageUrl }}"></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ robot.createdAt ? robot.createdAt|date('Y.m.d. H:i:s', 'Europe/Budapest') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ robot.updatedAt ? robot.updatedAt|date('Y.m.d. H:i:s', 'Europe/Budapest'): '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ robot.deletedAt ? robot.deletedAt|date('Y.m.d. H:i:s', 'Europe/Budapest') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-row">
        <a class="btn btn-info m-1" href="{{ path('app_robot_index') }}">Back to list</a>
        
        <a class="btn btn-warning m-1" href="{{ path('app_robot_edit', {'id': robot.id}) }}">Edit</a>
        
        {{ include('robot/_delete_form.html.twig') }}
    </div>
{% endblock %}
