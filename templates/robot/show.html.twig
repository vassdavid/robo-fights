{% extends 'base.html.twig' %}

{% block title %}Robot{% endblock %}

{% block body %}
    <h1>Robot</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ robot.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ robot.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ robot.type.value }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ robot.power }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td><img src="{{ robot.imageUrl }}"></td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ robot.createdAt ? robot.createdAt|date('Y.m.d. H:i:s', 'Europe/Budapest') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ robot.updatedAt ? robot.updatedAt|date('Y.m.d. H:i:s', 'Europe/Budapest'): '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ robot.deletedAt ? robot.deletedAt|date('Y.m.d. H:i:s', 'Europe/Budapest') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_robot_index') }}">back to list</a>

    <a class="btn btn-warning" href="{{ path('app_robot_edit', {'id': robot.id}) }}">edit</a>

    {{ include('robot/_delete_form.html.twig') }}
{% endblock %}
